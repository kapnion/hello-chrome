{
    "manifest_version": 3,
    "name": "Hello Chrome Extension",
    "version": "1.0",
    "description": "A simple Chrome extension.",
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "permissions": [
      "activeTab",
      "scripting"
    ]
  }